.container
  .row
    .col-sm-3
    .col-sm-6
      .form-box
        .form-top
          .form-top-left
            %h3 Sign up now
          .form-top-right
            %i.fa.fa-pencil
        .form-bottom
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!
            .form-group
              %label.sr-only{:for => "form-first-name"} First name
              = f.text_field :first_name, autofocus: true, placeholder: "First name...", class: "form-first-name form-control", id: "form-first-name", required: true
            .form-group
              %label.sr-only{:for => "form-last-name"} Last name
              = f.text_field :last_name, autofocus: true, placeholder: "Last name...", class: "form-last-name form-control", id: "form-last-name", required: true
            .form-group
              %label.sr-only{:for => "form-email-name"} Email
              = f.email_field :email, placeholder: "Email", class: "form-email form-control", id: "form-email"
            .form-group
              %label.sr-only{:for => "form-phone-number"} Phone Number
              = f.text_field :phone_number, autofocus: true, placeholder: "Phon Number", class: "form-phone-number form-control", id: "form-phone-number", required: true
            .form-group
              %label.sr-only{:for => "form-password"} Password
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password"
            .form-group
              %label.sr-only{:for => "form-password-confirmation"} Password Confirmation
              = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password Confirmation"
            %button.btn{:type => "submit"} Sign me up!
    .col-sm-3
